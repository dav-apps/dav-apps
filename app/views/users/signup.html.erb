<div class="content container">
   <h1 align="center">Sign up</h1>
   <%= render 'layouts/messages' %>

   <%= form_tag(signup_path, class: "form-horizontal row mt-4", role: "form", method: "post") do |f| %>
      <div class="form-group row col-sm-10 offset-sm-1 col-lg-8 offset-lg-2">
         <%= label_tag :username, "Username", class: "col-sm-2 col-form-label" %>
         <div class="col-sm-10">
            <%= text_field_tag :username, nil, class: "form-control", placeholder: "Your username" %>
         </div>
      </div>
      <div class="form-group row col-sm-10 offset-sm-1 col-lg-8 offset-lg-2">
         <%= label_tag :email, "Email", class: "col-sm-2 col-form-label" %>
         <div class="col-sm-10">
            <%= email_field_tag :email, nil, class: "form-control", placeholder: "Your email" %>
         </div>
      </div>
      <div class="form-group row col-sm-10 offset-sm-1 col-lg-8 offset-lg-2">
         <%= label_tag :password, "Password", class: "col-sm-2 col-form-label" %>
         <div class="col-sm-10">
            <%= password_field_tag :password, nil, class: "form-control", placeholder: "Your password" %>
         </div>
      </div>
      <div class="form-group row col-sm-10 offset-sm-1 col-lg-8 offset-lg-2">
         <%= label_tag :password_confirmation, "Password confirmation", class: "col-sm-2 col-form-label" %>
         <div class="col-sm-10">
            <%= password_field_tag :password_confirmation, nil, class: "form-control", placeholder: "Confirm your password" %>
            <%= submit_tag("Sign up", class: "btn btn-primary btn-md mt-3") %>
         </div>
      </div>
   <% end %>
</div>